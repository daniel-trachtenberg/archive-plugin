# Server
HOST=0.0.0.0
PORT=8000

# File system
INPUT_DIR=/Users/your-user/Downloads
ARCHIVE_DIR=/Users/your-user/Desktop
WATCH_INPUT_DIR=true

# Active LLM settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-5.2
LLM_BASE_URL=https://api.openai.com/v1

# Local runtime defaults (used when provider=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# API keys
# Leave plaintext key fields empty. The app stores encrypted forms in *_ENC fields.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_COMPATIBLE_API_KEY=
LLM_API_KEY=

# Encrypted API key storage
OPENAI_API_KEY_ENC=
ANTHROPIC_API_KEY_ENC=
OPENAI_COMPATIBLE_API_KEY_ENC=

# Optional: pin encryption key for deterministic environments
# ARCHIVE_MASTER_KEY=

# Optional override for Chroma storage location
# CHROMA_DB_DIR=/Users/your-user/Desktop/.chromadb

# Optional override for move-log SQLite path
# MOVE_LOG_DB_PATH=/Users/your-user/.archive-plugin/move_logs.db
